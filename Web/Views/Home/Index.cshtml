@using Core.Models

<div ng-controller="myController">

	<h1>Whiskey selection</h1>
	
	@{
		Html.RenderPartial("_AddWhiskey", new Whiskey());
	}

	<div ng-show="loading">
		<p>loading whiskeys.....</p>
	</div>

	<div ng-cloak ng-repeat="whiskey in whiskeys">

		<h3>
			{{$index + 1}} - <a href="#" ng-click="showDetails = ! showDetails">{{whiskey.name}}</a>
		</h3>

		<div ng-show="showDetails">
			<p><span>Age: </span>{{whiskey.age}}</p>
			<p><span>Alcohol Percentage: </span>{{whiskey.alcoholPercentage}}</p>
			<h4><strong>Distillery</strong></h4>
			<p><span>Name: </span>{{whiskey.distillery.name}}</p>
			<p><span>Description: </span>{{whiskey.distillery.description}}</p>
			<button ng-click="edit(whiskey)">Edit</button>
		</div>

	</div>

</div>